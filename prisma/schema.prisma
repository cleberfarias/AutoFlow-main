generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "sqlite"
  url      = env("DATABASE_URL")
}

model PendingConfirmation {
  id           String   @id @default(cuid())
  chatId       String
  action       String
  intent       String?
  originalText String?
  expiresAt    BigInt
  createdAt    DateTime @default(now())
}

model Storage {
  key   String @id
  value String
}

